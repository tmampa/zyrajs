{
  "name": "zyrajs",
  "version": "0.2.2",
  "description": "Zyra - A lightweight Node.js backend framework for building RESTful APIs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "create-zyra-app": "./bin/create-zyra-app.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "start": "node examples/basic-server.js"
  },
  "keywords": [
    "framework",
    "http",
    "api",
    "rest",
    "backend",
    "nodejs",
    "zyra",
    "web-framework",
    "express-alternative",
    "routing",
    "middleware"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmampa/zyrajs.git"
  },
  "bugs": {
    "url": "https://github.com/tmampa/zyrajs/issues"
  },
  "homepage": "https://github.com/tmampa/zyrajs#readme",
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "path-to-regexp": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3"
  }
}
